set -g status on
set -g default-terminal "xterm-256color"
set-option -ga terminal-overrides ",xterm:colors=256"

# instructs tmux to expect UTF-8 sequences
# setw -g utf8 on
# set-option -g status-utf8 on

#supposedly fixes pausing in vim
set-option -sg escape-time 1

setw -g aggressive-resize off

# remap prefix to Control + a
unbind C-b
set -g prefix C-a
bind-key a send-prefix

# force a reload of the config file
unbind R
bind R source-file ~/.tmux.conf \; display-message "Config reloaded..."

# history limit
set-option -g history-limit 10000

# quick pane cycling
unbind ^A
bind ^A select-pane -t :.+

# Mouse Mode
set -g mouse on

# Window activity monitor
setw -g monitor-activity on
set -g visual-activity on

# Status line
run-shell "powerline-daemon -q"
source '/Users/Jason/Library/Python/2.7/lib/python/site-packages/powerline/bindings/tmux/powerline.conf'
# source "/usr/share/tmux/powerline.conf"
# set -g status-bg colour234
# set -g status-fg white
# set -g status-left "#[fg=green]#S"
# set -g status-right "#[fg=yellow]\"#h\" #[fg=red]%D #[fg=green]%I:%M %p"

# Highlight active window
set-window-option -g window-status-current-bg red

# Update some variables
set-option -g update-environment "DBUS_SESSION_BUS_ADDRESS DISPLAY SSH_ASKPASS SSH_AUTH_SOCK SSH_AGENT_PID SSH_CONNECTION WINDOWID XAUTHORITY"


# Key bindings for copy-paste
setw -g mode-keys vi

unbind p
bind p paste-buffer
bind-key -t vi-copy 'v' begin-selection
bind-key -t vi-copy 'y' copy-selection
set-option -g renumber-windows on
